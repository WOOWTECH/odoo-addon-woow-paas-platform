<odoo>
    <record id="view_ai_thread_form_automation" model="ir.ui.view">
        <field name="name">ai.thread.form.automation</field>
        <field name="model">ai.thread</field>
        <field name="inherit_id" ref="ai_base_gt.view_ai_thread_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='res_id']" position="after">
                <field name="is_automation" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
