<odoo>
    <record id="ir_cron_view_form_ai_automation" model="ir.ui.view">
        <field name="name">ir.cron.view.form.ai_automation</field>
        <field name="model">ir.cron</field>
        <field name="inherit_id" ref="base.ir_cron_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='method_direct_trigger']" position="attributes">
                <attribute name="invisible" add="state != 'ai_action'" separator="and"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="after">
                <label for="cron_state"/>
                <field name="cron_state" widget="selection_badge" options="{'size': 'sm'}"/>
            </xpath>
        </field>
    </record>
</odoo>
