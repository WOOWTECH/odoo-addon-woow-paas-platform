<odoo>
    <record id="im_livechat_channel_view_form" model="ir.ui.view">
        <field name="name">im_livechat.channel.form.inherit</field>
        <field name="model">im_livechat.channel</field>
        <field name="inherit_id" ref="im_livechat.im_livechat_channel_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='operators']" position="inside">
                <group string="AI Operators" name="ai_operators">
                    <field name="ai_assistant_id"/>
                    <field name="ai_context_id"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
