<odoo>
    <record id="view_ai_context_form" model="ir.ui.view">
        <field name="name">ai.context.form</field>
        <field name="model">ai.context</field>
        <field name="arch" type="xml">
            <form string="AI Context">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="context" placeholder="Eg: You are a content-writer with 10 years of experience."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ai_context_list" model="ir.ui.view">
        <field name="name">ai.context.list</field>
        <field name="model">ai.context</field>
        <field name="arch" type="xml">
            <list string="AI Contexts">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_ai_context" model="ir.actions.act_window">
        <field name="name">AI Contexts</field>
        <field name="res_model">ai.context</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
