<odoo>
    <record id="view_ai_assistant_form" model="ir.ui.view">
        <field name="name">ai.assistant.form</field>
        <field name="model">ai.assistant</field>
        <field name="arch" type="xml">
            <form string="AI Assistant">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_user" string="View User" type="object"
                            class="oe_stat_button" icon="fa-user"
                            context="{'active_test': False}" invisible="not id"/>
                        <button name="action_view_data_items" type="object"
                            class="oe_stat_button" icon="fa-files-o" invisible="not data_item_count">
                            <field name="data_item_count" widget="statinfo" string="Data Items"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'avatar_128'}"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="config_id"/>
                        <field name="context_id"/>
                        <field name="is_super_assistant"/>
                    </group>
                    <div class="alert alert-warning" role="alert" invisible="not is_super_assistant">
                        <strong>Warning:</strong> This assistant is a super assistant. It has access to all data sources and models.
                        Please assign this assistant to the appropriate groups to restrict the access to it.
                    </div>
                    <notebook>
                        <page string="Data Sources" invisible="is_super_assistant">
                            <field name="data_source_ids" groups="!ai_base_gt.group_ai_advanced_setup_permissions">
                                <list>
                                    <field name="name"/>
                                    <field name="type"/>
                                </list>
                            </field>
                            <field name="assistant_data_source_ids" groups="ai_base_gt.group_ai_advanced_setup_permissions">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="data_source_id" options="{'no_create': True}"/>
                                    <field name="data_source_type" column_invisible="1"/>
                                    <field name="allow_read" invisible="data_source_type != 'model'"/>
                                    <field name="allow_create" invisible="data_source_type != 'model'"/>
                                    <field name="allow_write" invisible="data_source_type != 'model'"/>
                                    <field name="allow_unlink" invisible="data_source_type != 'model'"/>
                                </list>
                            </field>
                        </page>
                        <page string="Access Groups">
                            <field name="group_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ai_assistant_list" model="ir.ui.view">
        <field name="name">ai.assistant.list</field>
        <field name="model">ai.assistant</field>
        <field name="arch" type="xml">
            <list string="AI Assistants">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="config_id"/>
                <field name="is_super_assistant"/>
            </list>
        </field>
    </record>

    <record id="action_ai_assistant" model="ir.actions.act_window">
        <field name="name">AI Assistants</field>
        <field name="res_model">ai.assistant</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
