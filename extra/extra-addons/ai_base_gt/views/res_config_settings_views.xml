<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.ai.base</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='user_default_rights']" position="before">
                <block title="AI" name="ai">
                    <setting string="Advanced Setup"
                        help="Enable per-data-source CRUD permissions on AI Assistants.">
                        <field name="group_ai_advanced_setup_permissions"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
