<odoo>
    <record id="view_ai_config_form" model="ir.ui.view">
        <field name="name">ai.config.form</field>
        <field name="model">ai.config</field>
        <field name="arch" type="xml">
            <form string="AI Configuration">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <group>
                        <group name="left">
                            <field name="name"/>
                            <field name="type" widget="radio"/>
                        </group>
                        <group name="right">
                            <field name="api_key" invisible="type == 'odooai'" password="1"/>
                            <label for="model" invisible="type == 'odooai'"/>
                            <div class="o_row">
                                <field name="model" invisible="type == 'odooai'" required="type != 'odooai'"/>
                            </div>
                            <field name="temperature" invisible="type == 'odooai'"/>
                            <field name="max_tokens" invisible="type == 'odooai'"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ai_config_list" model="ir.ui.view">
        <field name="name">ai.config.list</field>
        <field name="model">ai.config</field>
        <field name="arch" type="xml">
            <list string="AI Configurations">
                <field name="name"/>
                <field name="type"/>
            </list>
        </field>
    </record>

    <record id="action_ai_config" model="ir.actions.act_window">
        <field name="name">AI Configurations</field>
        <field name="res_model">ai.config</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
