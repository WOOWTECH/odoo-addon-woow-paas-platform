<odoo>
    <record id="view_ai_data_item_list" model="ir.ui.view">
        <field name="name">ai.data.item.list</field>
        <field name="model">ai.data.item</field>
        <field name="arch" type="xml">
            <list string="AI Data Items">
                <field name="source"/>
                <field name="data_source_id"/>
            </list>
        </field>
    </record>

    <record id="view_ai_data_item_form" model="ir.ui.view">
        <field name="name">ai.data.item.form</field>
        <field name="model">ai.data.item</field>
        <field name="arch" type="xml">
            <form string="AI Data Item">
                <sheet>
                    <group>
                        <group>
                            <field name="source"/>
                            <field name="data_source_id"/>
                        </group>
                        <group>
                            <field name="res_model" invisible="not res_model"/>
                            <field name="res_id" invisible="not res_id"/>
                            <field name="res_url" widget="url" invisible="not res_url"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Data">
                            <field name="data"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ai_data_item" model="ir.actions.act_window">
        <field name="name">AI Data Items</field>
        <field name="res_model">ai.data.item</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
