<odoo>
    <record id="view_ai_thread_form" model="ir.ui.view">
        <field name="name">ai.thread.form</field>
        <field name="model">ai.thread</field>
        <field name="arch" type="xml">
            <form string="AI Thread">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="assistant_id"/>
                            <field name="res_model"/>
                            <field name="res_id"/>
                            <field name="create_date"/>
                        </group>
                        <group>
                            <field name="context_id"/>
                            <field name="prompt_template_id"/>
                            <field name="prompt"/>
                            <button name="action_send_request" type="object" string="Send" class="oe_highlight"/>
                        </group>
                    </group>
                    <group invisible="not last_error">
                        <field name="last_error"/>
                    </group>
                    <notebook>
                        <page string="Messages" name="messages">
                            <field name="message_ids">
                                <list string="Messages">
                                    <field name="create_date"/>
                                    <field name="message_type"/>
                                    <field name="author_id"/>
                                    <field name="content"/>
                                </list>
                                <form string="Messages" edit="0" delete="0">
                                    <sheet>
                                        <group>
                                            <field name="message_type"/>
                                            <field name="author_id"/>
                                            <field name="create_date"/>
                                        </group>
                                        <group>
                                            <field name="content"/>
                                            <field name="message_record_ids" invisible="not message_record_ids"/>
                                        </group>
                                        <group invisible="not func_call and not func_result">
                                            <field name="func_call" string="Function Call"
                                                widget="ace" invisible="not func_call"/>
                                            <field name="func_result" string="Function Result"
                                                widget="ace" invisible="not func_result"/>
                                        </group>
                                        <group>
                                            <field name="message_attachment_ids" invisible="not message_attachment_ids"/>
                                        </group>
                                        <group invisible="not response">
                                            <field name="response" widget="ace"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ai_thread_list" model="ir.ui.view">
        <field name="name">ai.thread.list</field>
        <field name="model">ai.thread</field>
        <field name="arch" type="xml">
            <list string="AI Threads">
                <field name="name"/>
                <field name="assistant_id"/>
                <field name="create_date"/>
                <field name="res_model"/>
                <field name="res_id"/>
            </list>
        </field>
    </record>

    <record id="action_ai_threads" model="ir.actions.act_window">
        <field name="name">AI Threads</field>
        <field name="res_model">ai.thread</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
