<odoo>
    <record id="ai_data_source_view_list" model="ir.ui.view">
        <field name="name">ai.data.source.list</field>
        <field name="model">ai.data.source</field>
        <field name="arch" type="xml">
            <list string="AI Data Sources">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="type"/>
            </list>
        </field>
    </record>

    <record id="ai_data_source_view_form" model="ir.ui.view">
        <field name="name">ai.data.source.form</field>
        <field name="model">ai.data.source</field>
        <field name="arch" type="xml">
            <form string="AI Data Source">
                <header>
                    <button name="action_index" string="Index Data"
                        type="object" class="oe_highlight" groups="base.group_system"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_data_items" type="object"
                            class="oe_stat_button" icon="fa-files-o" invisible="not data_item_count">
                            <field name="data_item_count" widget="statinfo" string="Data Items"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="type" widget="radio" options="{'horizontal': true}"/>
                    </group>
                    <group invisible="type != 'model'">
                        <group>
                            <field name="model_id" required="type == 'model'"/>
                            <field name="model" invisible="1"/>
                            <field name="model_field_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="model_domain" widget="domain" options="{'model': 'model', 'in_dialog': True}"/>
                        </group>
                    </group>
                    <group invisible="type != 'url'">
                        <group>
                            <field name="url_regex" required="type == 'url'" placeholder="/contactus&#10;/services/*&#10;https://odoo.com/industries/*&#10;"/>
                        </group>
                    </group>
                    <group invisible="type != 'text'">
                        <field name="data_item_ids" string="Text Data">
                            <list>
                                <field name="source" string="Title"/>
                            </list>
                            <form>
                                <group>
                                    <field name="source" string="Title"/>
                                    <field name="data" string="Content" required="True"/>
                                </group>
                            </form>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ai_data_source_view_search" model="ir.ui.view">
        <field name="name">ai.data.source.search</field>
        <field name="model">ai.data.source</field>
        <field name="arch" type="xml">
            <search string="AI Data Sources">
                <field name="name"/>
                <field name="model_id"/>
                <separator/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_by_type" domain="[]" context="{'group_by': 'type'}"/>
                    <filter string="Model" name="group_by_model" domain="[]" context="{'group_by': 'model_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_ai_data_source" model="ir.actions.act_window">
        <field name="name">AI Data Sources</field>
        <field name="res_model">ai.data.source</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo> 