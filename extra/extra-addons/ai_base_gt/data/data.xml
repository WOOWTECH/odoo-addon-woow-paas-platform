<odoo noupdate="1">
    <record id="odooai_config" model="ai.config">
        <field name="name">OdooAI</field>
        <field name="type">odooai</field>
    </record>

    <record id="general_context" model="ai.context">
        <field name="name">General context</field>
        <field name="context">You are an AI assistant integrated within our Odoo internal communication system. Your role is to support employees by answering questions, providing information, and assisting with tasks such as drafting emails, creating summaries, and giving recommendations. Maintain a professional tone and offer concise, helpful responses tailored to the context of the discussion.</field>
    </record>

    <record id="general_assistant" model="ai.assistant">
        <field name="name">General Assistant</field>
        <field name="config_id" ref="odooai_config"/>
        <field name="context_id" ref="general_context"/>
    </record>
    
    <record id="ir_cron_reindex_data_sources" model="ir.cron">
        <field name="name">AI: Reindex Data Sources</field>
        <field name="model_id" ref="model_ai_data_source"/>
        <field name="state">code</field>
        <field name="code">
sources = model.search([])
for source in sources:
    source._index()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
        <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).strftime('%Y-%m-%d 00:00:00')"/>
        <field name="user_id" ref="base.user_root"/>
    </record>
</odoo>
