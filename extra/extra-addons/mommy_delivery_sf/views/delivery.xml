<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_delivery_carrier_form" model="ir.ui.view">
            <field name="name">delivery carrier sf</field>
            <field name="model">delivery.carrier</field>
            <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='destination']" position="before">
                    <page name="sf_config" string="SF Configuration" invisible="delivery_type != 'sf'">
                        <group>
                            <group string="Basic">
                                <field name="prod_environment" invisible="1"/>
                                <field name='sf_clientcode' required="delivery_type == 'sf'"/>
                                <field name="sf_sandbox_checkword" password="1" invisible="prod_environment" required="delivery_type == 'sf' and prod_environment"/>
                                <field name="sf_checkword" password="1" invisible="not prod_environment" required="delivery_type == 'sf' and prod_environment"/>
                                <field name="sf_custid"/>
                            </group>
                            <group string="Order">
                                <field name="sf_order_type"/>
                                <field name="sf_allow_manual"/>
                                <label for="sf_templcate_code" string="Template" />
                                <div class="o_row">
                                    <field name="sf_templcate_code" widget="selection"/>
                                    <button invisible="1" name="action_sync_template" string="Sync" type="object" class="oe_highlight"/>
                                </div>
                                <field name="sf_default_cargo"/>
                                <field name="sf_select_express_type"/>
                                <field name="sf_default_express_type" invisible="sf_select_express_type"/>
                                <field name="sf_payment_select"/>
                                <field name="sf_default_payment" invisible="sf_payment_select"/>
                            </group>
                            <group string="Address">
                                <!-- <field name="sf_sender_type"/> -->
                                <field name="sf_sender_address" invisible="sender_type != 'fixed'"/>
                                <field name="sf_address_format"/>
                            </group>
                            <group string="Language">
                                <field name="sf_language_type"/>
                                <field name="sf_language" invisible="sf_language_type != 'fixed'"/>
                            </group>
                            <group string="Cross-Border">
                                <field name="sf_declared_value"/>
                                <field name="sf_declared_currency"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>