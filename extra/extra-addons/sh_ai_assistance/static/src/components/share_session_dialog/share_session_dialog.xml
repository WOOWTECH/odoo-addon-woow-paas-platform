<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="sh_ai_assistance.ShareSessionDialog" owl="1">
        <Dialog title="'Share Chat'">
            <p>Anyone with this link can view the conversation.</p>
            <div class="input-group mb-3">
                <input type="text" class="form-control" t-ref="shareLinkInput" t-att-value="props.shareLink" readonly="1"/>
                <button class="btn btn-primary" t-on-click="onCopyLink">
                    <i class="fa fa-clipboard"/> Copy Link
                </button>
            </div>
        </Dialog>
    </t>
</templates>
