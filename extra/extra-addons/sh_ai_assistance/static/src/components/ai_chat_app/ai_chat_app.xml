<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="sh_ai_assistance.AiChatAppTemplate">
        <div class="o-ai-Chat d-flex h-100 flex-grow-1 border-top">
            <!-- Sidebar -->
            <div class="o-ai-ChatSidebar d-flex flex-column border-end"
                 t-att-class="state.sidebarCollapsed ? 'collapsed' : ''"
                 t-att-style="state.sidebarCollapsed ? 'width: 60px; min-width: 60px; transition: all 0.3s ease;' : 'width: 260px; min-width: 260px; transition: all 0.3s ease;'">

                <AiChatSidebar
                    sessions="state.sessions"
                    currentSessionToken="state.currentSessionToken"
                    isCollapsed="state.sidebarCollapsed"
                    isLoading="state.isLoading"
                    onNewChat.bind="createNewSession"
                    onSelectSession.bind="selectSession"
                    onToggleSidebar.bind="toggleSidebar"
                    onDeleteSession.bind="deleteSession"
                    onImportSuccess.bind="onImportSuccess"/>

            </div>

            <!-- Main Content Area -->
            <div class="flex-grow-1 d-flex flex-column position-relative">
                <!-- Loading Overlay -->
                <t t-if="state.isLoading">
                    <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center bg-white bg-opacity-75" style="z-index: 1000;">
                        <div class="d-flex align-items-center">
                            <i class="fa fa-spinner fa-spin me-2"/>
                            <span>Loading...</span>
                        </div>
                    </div>
                </t>

                <!-- Main Chat Component -->
                <AiChatMain
                    sessionToken="state.currentSessionToken"
                    currentLlmCompany="currentLlmCompany"
                    processingSessions="state.processingSessions"
                    onSessionRenamed.bind="onSessionRenamed"
                    onMessageSent.bind="onMessageSent"
                    onModelChanged.bind="onModelChanged"
                    onSetSessionProcessing.bind="setSessionProcessing"/>
            </div>
        </div>
    </t>
</templates>