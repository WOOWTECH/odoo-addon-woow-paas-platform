<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Chat Session List View -->
    <record id="sh_ai_chat_session_view_list" model="ir.ui.view">
        <field name="name">sh.ai.chat.session.list</field>
        <field name="model">sh.ai.chat.session</field>
        <field name="arch" type="xml">
            <list string="Chat Sessions">
                <field name="display_name"/>
                <field name="llm_id"/>
                <field name="message_count"/>
                <field name="state" widget="badge" decoration-success="state == 'active'" decoration-muted="state == 'archived'" decoration-danger="state == 'error'"/>
                <field name="last_message_date"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Chat Session Form View -->
    <record id="sh_ai_chat_session_view_form" model="ir.ui.view">
        <field name="name">sh.ai.chat.session.form</field>
        <field name="model">sh.ai.chat.session</field>
        <field name="arch" type="xml">
            <form string="Chat Session">
                <!-- <header>
                    <field name="state" widget="statusbar" statusbar_visible="active,archived"/>
                </header> -->
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Chat Session Title"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" readonly="1"/>
                            <field name="llm_id"/>
                        </group>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="last_message_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Messages" name="messages">
                            <field name="message_ids" nolabel="1">
                                <list string="Chat Messages" decoration-info="message_type == 'tool'" decoration-muted="message_type == 'thought'">
                                    <field name="message_type"/>
                                    <field name="content"/>
                                    <field name="prompt_tokens" string="Prompt" sum="Total Prompt Tokens"/>
                                    <field name="completion_tokens" string="Completion" sum="Total Completion Tokens"/>
                                    <field name="total_tokens" string="Total" sum="Grand Total Tokens"/>
                                    <field name="tool_call_count" string="Tools" sum="Total Tool Calls"/>
                                    <field name="execution_time" string="Time (s)" avg="Average Time"/>
                                    <field name="create_date" readonly="1" string="Date"/>
                                    <button name="action_view_debug_info"
                                            string="Debug Info"
                                            type="object"
                                            icon="fa-bug"
                                            invisible="message_type not in ['assistant', 'error']"/>
                                </list>
                            </field>
                        </page>
                        <page string="Session Analytics" name="analytics">
                            <group>
                                <group string="Token Consumption">
                                    <field name="total_prompt_tokens"/>
                                    <field name="total_completion_tokens"/>
                                    <field name="total_session_tokens" class="fw-bold"/>
                                </group>
                                <group string="Performance">
                                    <field name="total_tool_calls"/>
                                    <field name="total_execution_time" widget="float_time"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Chat Session Action -->
    <record id="action_sh_ai_chat_session" model="ir.actions.act_window">
        <field name="name">Chat Sessions</field>
        <field name="res_model">sh.ai.chat.session</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Start your first AI chat session!
            </p>
            <p>
                Create chat sessions to interact with your configured AI providers.
            </p>
        </field>
    </record>

</odoo>