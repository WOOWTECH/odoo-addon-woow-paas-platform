<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sh_ai_llm_form_view_inherit" model="ir.ui.view">
        <field name="name">sh.ai.llm.form.view.inherit</field>
        <field name="model">sh.ai.llm</field>
        <field name="inherit_id" ref="sh_ai_base.sh_ai_llm_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                
                <!-- TAB 1: System Prompt (Core Identity) -->
                <page string="System Prompt" name="system_prompt">
                    <group>
                        <field name="system_prompt" placeholder="Core identity and role of the AI assistant..." nolabel="1" options="{'resizable': true}"/>
                    </group>
                </page>
                
                <!-- TAB 2: Workflow & Reasoning -->
                <page string="Workflow" name="workflow">
                    <group string="Step-by-Step Reasoning Process">
                        <field name="workflow_instruction" placeholder="Define the step-by-step workflow for handling queries..." nolabel="1" options="{'resizable': true}"/>
                    </group>
                </page>
                
                <!-- TAB 3: Tool Selection -->
                <page string="Tools" name="tools">
                    <group string="Tool Selection Rules">
                        <field name="tool_instruction" placeholder="When to use aggregate_records vs search_records..." nolabel="1" options="{'resizable': true}"/>
                    </group>
                </page>
                
                <!-- TAB 4: Output Formatting -->
                <page string="Formatting" name="formatting">
                    <group string="Response Structure &amp; Markdown Rules">
                        <field name="formatting_instruction" placeholder="Markdown tables, currency symbols, greeting format..." nolabel="1" options="{'resizable': true}"/>
                    </group>
                    <group string="User/Company Context Rules">
                        <field name="context_instruction" placeholder="Personalization and timezone handling..." nolabel="1" options="{'resizable': true}"/>
                    </group>
                </page>
                
                <!-- TAB 5: Security & Guardrails -->
                <page string="Security" name="security">
                    <group string="Critical Rules (Highest Priority)">
                        <field name="critical_instruction" placeholder="Absolute guardrails that override everything..." nolabel="1" options="{'resizable': true}"/>
                    </group>
                    <group string="Access Control &amp; Error Handling">
                        <field name="security_instruction" placeholder="How to handle access denied, missing models..." nolabel="1" options="{'resizable': true}"/>
                    </group>
                </page>
                
                <!-- TAB 6: Examples (Multishot) -->
                <page string="Examples" name="examples">
                    <group string="Multishot Examples for Common Scenarios">
                        <field name="examples_instruction" placeholder="USER: ...\nTHINKING: ...\nTOOL: ...\nRESPONSE: ..." nolabel="1" options="{'resizable': true}"/>
                    </group>
                </page>
                
            </xpath>
        </field>
    </record>

</odoo>
