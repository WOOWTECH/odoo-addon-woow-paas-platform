<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Chat Session Security Rules - Users can only access their own sessions -->
        <record id="sh_ai_chat_session_user_rule" model="ir.rule">
            <field name="name">AI Chat Session: User Access Own Records</field>
            <field name="model_id" ref="model_sh_ai_chat_session"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('sh_ai_base.group_sh_ai_user'))]"/>
        </record>

        <!-- Chat Session Security Rules - Managers have full access -->
        <record id="sh_ai_chat_session_manager_rule" model="ir.rule">
            <field name="name">AI Chat Session: Manager Full Access</field>
            <field name="model_id" ref="model_sh_ai_chat_session"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('sh_ai_base.group_sh_ai_manager'))]"/>
        </record>

        <!-- Chat Message Security Rules - Users can only access messages from their own sessions -->
        <record id="sh_ai_chat_message_user_rule" model="ir.rule">
            <field name="name">AI Chat Message: User Access Own Session Messages</field>
            <field name="model_id" ref="model_sh_ai_chat_message"/>
            <field name="domain_force">[('session_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('sh_ai_base.group_sh_ai_user'))]"/>
        </record>

        <!-- Chat Message Security Rules - Managers have full access -->
        <record id="sh_ai_chat_message_manager_rule" model="ir.rule">
            <field name="name">AI Chat Message: Manager Full Access</field>
            <field name="model_id" ref="model_sh_ai_chat_message"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('sh_ai_base.group_sh_ai_manager'))]"/>
        </record>

    </data>
</odoo>