<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- LLM List View -->
    <record id="sh_ai_llm_view_list" model="ir.ui.view">
        <field name="name">sh.ai.llm.list</field>
        <field name="model">sh.ai.llm</field>
        <field name="arch" type="xml">
            <list string="LLM Providers">
                <field name="image" widget="image" options="{'size': [40, 40]}" optional="show"/>
                <field name="name"/>
                <field name="sh_company"/>
                <field name="sh_model_code"/>
                <field name="is_default" widget="boolean_toggle"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- LLM Form View -->
    <record id="sh_ai_llm_view_form" model="ir.ui.view">
        <field name="name">sh.ai.llm.form</field>
        <field name="model">sh.ai.llm</field>
        <field name="arch" type="xml">
            <form string="LLM Provider">
                <field name="is_gpt_5_model" invisible="1"/>
                <div class="alert alert-warning" role="alert"
                        invisible="not is_gpt_5_model">
                    <span>âš  GPT-5 models does not support response type.</span>
                </div>
                <sheet>
                    <div class="oe_button_box" position="inside"/>
                    <field name="image" widget="image" class="oe_avatar" options="{'size': [90, 90]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. GPT-4o"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sh_company" placeholder="e.g. OpenAI"/>
                            <field name="sh_model_code" placeholder="e.g. gpt-4o or gemini-2.5-flash"/>
                            <field name="temperature" invisible="is_gpt_5_model"/>
                        </group>
                        <group>
                            <field name="sh_api_key" password="True" placeholder="Your API key..."/>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="is_default" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LLM Action -->
    <record id="action_sh_ai_llm" model="ir.actions.act_window">
        <field name="name">LLM Providers</field>
        <field name="res_model">sh.ai.llm</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first LLM Provider!
            </p>
            <p>
                Configure LLM providers like OpenAI, Google, Anthropic to use with your AI assistants.
            </p>
        </field>
    </record>

</odoo>