<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- AI Assistance Module Category -->
        <record model="ir.module.category" id="module_category_ai_assistance">
            <field name="name">AI Accessibility</field>
            <field name="sequence">100</field>
        </record>

        <!-- AI User Group -->
        <record id="group_sh_ai_user" model="res.groups">
            <field name="name">User: Access AI features</field>
            <field name="category_id" ref="module_category_ai_assistance"/>
            <field name="comment">Can Access AI functionality and view basic AI features</field>
        </record>

        <!-- AI Manager Group -->
        <record id="group_sh_ai_manager" model="res.groups">
            <field name="name">Manager: Configure AI Settings</field>
            <field name="category_id" ref="module_category_ai_assistance"/>
            <field name="implied_ids" eval="[(4, ref('group_sh_ai_user'))]"/>
            <field name="comment">Full access to AI configuration, LLM providers, and API key management</field>
        </record>

    </data>
</odoo>