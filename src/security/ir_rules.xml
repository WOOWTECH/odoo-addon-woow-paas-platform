<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Workspace: Users can read/write workspaces where they are members -->
        <record id="workspace_rule_member_access" model="ir.rule">
            <field name="name">Workspace: member access only</field>
            <field name="model_id" ref="model_woow_paas_platform_workspace"/>
            <field name="domain_force">[('access_ids.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Workspace: Any user can create new workspaces -->
        <record id="workspace_rule_create" model="ir.rule">
            <field name="name">Workspace: anyone can create</field>
            <field name="model_id" ref="model_woow_paas_platform_workspace"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- WorkspaceAccess: Users can read/write access records for workspaces they're members of -->
        <record id="workspace_access_rule_member_access" model="ir.rule">
            <field name="name">WorkspaceAccess: member access only</field>
            <field name="model_id" ref="model_woow_paas_platform_workspace_access"/>
            <field name="domain_force">[('workspace_id.access_ids.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- WorkspaceAccess: Any user can create access records (for invitations) -->
        <record id="workspace_access_rule_create" model="ir.rule">
            <field name="name">WorkspaceAccess: anyone can create</field>
            <field name="model_id" ref="model_woow_paas_platform_workspace_access"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
