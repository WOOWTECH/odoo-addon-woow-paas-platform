<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default AI Configuration for WoowBot -->
        <record id="ai_config_woowbot" model="ai.config">
            <field name="name">WoowBot Config</field>
            <field name="type">chatgpt</field>
            <field name="model">gpt-4o-mini</field>
            <field name="temperature">0.7</field>
            <field name="max_tokens">2000</field>
        </record>

        <!-- WoowBot system prompt context -->
        <record id="ai_context_woowbot" model="ai.context">
            <field name="name">WoowBot Context</field>
            <field name="context">You are WoowBot, a helpful and friendly AI assistant for the Woow PaaS platform. You help users with their tasks, answer questions about the platform, and provide guidance on best practices. Be concise, professional, and supportive. When you are unsure about something, say so honestly rather than guessing.</field>
        </record>

        <!-- Default AI Assistant: WoowBot -->
        <record id="ai_assistant_woowbot" model="ai.assistant">
            <field name="name">WoowBot</field>
            <field name="config_id" ref="ai_config_woowbot"/>
            <field name="context_id" ref="ai_context_woowbot"/>
            <field name="description">Woow PaaS 平台的預設 AI 助手</field>
        </record>
    </data>
</odoo>
