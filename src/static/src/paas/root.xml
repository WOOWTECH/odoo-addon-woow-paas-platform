<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="woow_paas_platform.Root">
        <AppShell router="router">
            <t t-if="router.current === 'dashboard'">
                <DashboardPage/>
            </t>
            <t t-elif="router.current === 'workspaces'">
                <WorkspaceListPage/>
            </t>
            <t t-elif="router.current === 'workspace-detail'">
                <WorkspaceDetailPage workspaceId="workspaceId"/>
            </t>
            <t t-elif="router.current === 'workspace-team'">
                <WorkspaceTeamPage workspaceId="workspaceId"/>
            </t>
            <t t-elif="router.current === 'marketplace'">
                <AppMarketplacePage workspaceId="workspaceId"/>
            </t>
            <t t-elif="router.current === 'configure'">
                <AppConfigurationPage workspaceId="workspaceId" templateId="templateId"/>
            </t>
            <t t-elif="router.current === 'service-detail'">
                <ServiceDetailPage workspaceId="workspaceId" serviceId="serviceId" initialTab="serviceTab"/>
            </t>
            <t t-elif="router.current === 'ai-assistant' or router.current === 'ai-projects' or router.current === 'ai-tasks' or router.current === 'ai-task-detail' or router.current === 'ai-chat'">
                <t t-if="router.current === 'ai-assistant'">
                    <AiAssistantPage/>
                </t>
                <t t-elif="router.current === 'ai-projects'">
                    <SupportProjectsPage/>
                </t>
                <t t-elif="router.current === 'ai-tasks'">
                    <!-- SupportTasksPage placeholder (future Task #26) -->
                    <EmptyState/>
                </t>
                <t t-elif="router.current === 'ai-task-detail'">
                    <!-- TaskDetailPage placeholder (future Task #27) -->
                    <EmptyState/>
                </t>
                <t t-elif="router.current === 'ai-chat'">
                    <!-- AiChat full page placeholder (future Task #29) -->
                    <EmptyState/>
                </t>
            </t>
            <t t-else="">
                <EmptyState/>
            </t>
        </AppShell>
    </t>
</templates>
