<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.woow.paas</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="Woow PaaS" string="Woow PaaS" name="woow_paas_platform">
                    <block title="PaaS Operator Configuration" name="paas_operator">
                        <setting string="Operator Connection"
                                 help="Configure connection to the PaaS Operator service for Kubernetes deployments.">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="woow_paas_operator_url" class="col-lg-3 o_light_label"/>
                                    <field name="woow_paas_operator_url"
                                           placeholder="http://paas-operator:8000"
                                           class="col-lg-6"/>
                                </div>
                                <div class="row mt8">
                                    <label for="woow_paas_operator_api_key" class="col-lg-3 o_light_label"/>
                                    <field name="woow_paas_operator_api_key"
                                           password="True"
                                           placeholder="Enter API Key"
                                           class="col-lg-6"/>
                                </div>
                            </div>
                        </setting>
                        <setting string="Domain Configuration"
                                 help="Configure the base domain for deployed services.">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="woow_paas_domain" class="col-lg-3 o_light_label"/>
                                    <field name="woow_paas_domain"
                                           placeholder="woowtech.io"
                                           class="col-lg-6"/>
                                </div>
                            </div>
                        </setting>
                    </block>
                    <block title="AI Assistant Configuration" name="ai_assistant">
                        <setting string="Default AI Provider"
                                 help="Select the default AI provider for AI assistant features. Providers can be managed via the AI Providers menu.">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="woow_ai_provider_id" class="col-lg-3 o_light_label"/>
                                    <field name="woow_ai_provider_id"
                                           class="col-lg-6"/>
                                </div>
                                <div class="mt8">
                                    <button name="%(action_ai_provider)d"
                                            type="action"
                                            string="Manage AI Providers"
                                            class="btn-link"
                                            icon="fa-external-link"/>
                                </div>
                                <div class="mt8">
                                    <button name="action_test_ai_connection"
                                            type="object"
                                            string="Test Connection"
                                            class="btn-secondary"
                                            icon="fa-plug"/>
                                </div>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
