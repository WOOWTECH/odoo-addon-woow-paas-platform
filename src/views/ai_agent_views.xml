<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- AI Agent Tree View -->
    <record id="view_ai_agent_tree" model="ir.ui.view">
        <field name="name">woow_paas_platform.ai_agent.tree</field>
        <field name="model">woow_paas_platform.ai_agent</field>
        <field name="arch" type="xml">
            <list string="AI Agents">
                <field name="name"/>
                <field name="agent_display_name"/>
                <field name="provider_id"/>
                <field name="is_default"/>
            </list>
        </field>
    </record>

    <!-- AI Agent Form View -->
    <record id="view_ai_agent_form" model="ir.ui.view">
        <field name="name">woow_paas_platform.ai_agent.form</field>
        <field name="model">woow_paas_platform.ai_agent</field>
        <field name="arch" type="xml">
            <form string="AI Agent">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Agent Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General">
                            <field name="agent_display_name" placeholder="WoowBot"/>
                            <field name="provider_id"/>
                            <field name="avatar_color" widget="color"/>
                            <field name="is_default"/>
                        </group>
                    </group>
                    <group string="System Prompt">
                        <field name="system_prompt" nolabel="1"
                               placeholder="You are a helpful AI assistant..."
                               colspan="2"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AI Agent Action -->
    <record id="action_ai_agent" model="ir.actions.act_window">
        <field name="name">AI Agents</field>
        <field name="res_model">woow_paas_platform.ai_agent</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add an AI Agent
            </p>
            <p>
                Configure AI agents with custom system prompts and personalities.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem
        id="menu_ai_agent"
        name="AI Agents"
        parent="menu_woow_paas_platform_root"
        action="action_ai_agent"
        sequence="31"/>
</odoo>
