{
  // Python 解釋器設定
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

  // Python 分析設定
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  // "python.analysis.extraPaths": [
  //   "/Users/woow/odoo-18.0",
  //   "/Users/woow/odoo_env/lib/python3.9/site-packages",
  // ],
  "python.languageServer": "None",

  "python.analysis.diagnosticSeverityOverrides": {
    "reportGeneralTypeIssues": "none"
  },

  // 格式化設定（使用 Ruff）
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },

  // Ruff 設定（取代 Black + Flake8 + isort）
  "ruff.lineLength": 120,
  "ruff.lint.ignore": ["E203"],

  // 檔案排除設定（提升效能）
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/.DS_Store": true
  },

  // 搜尋排除設定
  "search.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/node_modules": true,
    "**/venv": true,
    "**/.venv": true
  },

  // XML 設定（用於 Odoo views）
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml",
    "editor.formatOnSave": true
  },
  "xml.symbols.enabled": false,

  // JavaScript/TypeScript 設定
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // SCSS 設定
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // 終端機設定
  "terminal.integrated.env.osx": {
    "PYTHONPATH": "${workspaceFolder}/src"
  },
  "terminal.integrated.env.linux": {
    "PYTHONPATH": "${workspaceFolder}/src"
  },

  // Git 設定
  "git.ignoreLimitWarning": true,

  // Odoo 特定設定
  "odoo.addonsPath": ["${workspaceFolder}"]
}
